<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.wnp</groupId>
        <artifactId>databaseutils</artifactId>
        <version>7.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>wnp-setup-db</artifactId>
    <packaging>jar</packaging>
    <name>setup-database</name>
    <dependencies>
        <dependency>
            <groupId>com.oracle</groupId>
            <artifactId>ojdbc7</artifactId>
            <version>${com.oracle.ojdbc7}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-sources</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <tasks>
                                <mkdir dir="target/filtered-resources"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>read-test-database-properties</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>read-databasesetup-properties</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${database.connection.properties}</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven.resources.plugin}</version>
                <executions>
                    <execution>
                        <id>copy-core-resources</id>
                        <phase/>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>sql-maven-plugin</artifactId>
                <version>${maven.sql.plugin}</version>
                <dependencies>
                    <dependency>
                        <groupId>com.oracle</groupId>
                        <artifactId>ojdbc7</artifactId>
                        <version>${com.oracle.ojdbc7}</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>drop-create-test-database</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>create-test-user</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>drop-OLTP_USER-database</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <driver>${dataSource.driver}</driver>
                            <url>${dataSource.sys.url}</url>
                            <delimiter>/</delimiter>
                            <username>${dataSource.sys.username}</username>
                            <password>${dataSource.sys.password}</password>
                            <autocommit>yes</autocommit>
                            <keepformat>yes</keepformat>
                            <fileset>
                                <basedir>${basedir}/target/filtered-databasesetup-resources</basedir>
                                <includes>
                                    <include>dropSchema.sql</include>
                                    <include>dropSchemaOauth.sql</include>
                                </includes>
                            </fileset>
                        </configuration>
                    </execution>
                    <execution>
                        <id>create-OLTP_USER-schema</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <skip>${skip.database.create}</skip>
                            <driver>${dataSource.driver}</driver>
                            <url>${dataSource.sys.url}</url>
                            <delimiter>/</delimiter>
                            <username>${dataSource.sys.username}</username>
                            <password>${dataSource.sys.password}</password>
                            <autocommit>yes</autocommit>
                            <keepformat>yes</keepformat>
                            <fileset>
                                <basedir>${basedir}/target/filtered-databasesetup-resources</basedir>
                                <includes>
                                    <include>createLogin.sql</include>
                                    <include>createLoginOauth.sql</include>
                                </includes>
                            </fileset>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.flywaydb</groupId>
                <artifactId>flyway-maven-plugin</artifactId>
                <version>${org.flywaydb.flyway-maven-plugin}</version>
                <executions>
                    <execution>
                        <id>dbclean-dbmigrate</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>dbmigrate</id>
                        <phase>none</phase>
                    </execution>
                    <execution>
                        <id>flyway-core-version-table-create</id>
                        <goals>
                            <goal>info</goal>
                            <goal>init</goal>
                            <goal>info</goal>
                        </goals>
                        <configuration>
                            <table>FLYWAY_VERSION_CORE</table>
                        </configuration>
                    </execution>
                    <execution>
                        <id>flyway-config-version-table-create</id>
                        <goals>
                            <goal>info</goal>
                            <goal>init</goal>
                            <goal>info</goal>
                        </goals>
                        <configuration>
                            <table>FLYWAY_VERSION_CONFIG</table>
                        </configuration>
                    </execution>
                    <execution>
                        <id>flyway-content-version-table-create</id>
                        <goals>
                            <goal>info</goal>
                            <goal>init</goal>
                            <goal>info</goal>
                        </goals>
                        <configuration>
                            <table>FLYWAY_VERSION_CONTENT</table>
                        </configuration>
                    </execution>
                    <execution>
                        <id>flyway-oauthcore-version-table-create</id>
                        <goals>
                            <goal>info</goal>
                            <goal>init</goal>
                            <goal>info</goal>
                        </goals>
                        <configuration>
                            <table>FLYWAY_VERSION_OCORE</table>
                            <url>${dataSource.oauth.users.url}</url>
                            <user>${dataSource.oauth.users.username}</user>
                            <password>${dataSource.oauth.users.password}</password>
                        </configuration>
                    </execution>

                </executions>
                <configuration>
                    <driver>${dataSource.driver}</driver>
                    <url>${dataSource.users.url}</url>
                    <user>${dataSource.users.username}</user>
                    <password>${dataSource.users.password}</password>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
